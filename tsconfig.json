{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "lib": ["es2017"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
